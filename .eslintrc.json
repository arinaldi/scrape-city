{
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "plugins": [
    "node",
    "promise",
    "standard"
  ],
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "eol-last": "error",
    "indent": ["error", 2],
    "no-unused-vars": [
      "error",
      { "varsIgnorePattern": "should|expect" }
    ],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "space-before-function-paren": "error",
    "spaced-comment": "error"
  },
  "globals": {
    "afterAll": false,
    "afterEach": false,
    "beforeAll": false,
    "beforeEach": false,
    "context": false,
    "describe": false,
    "expect": false,
    "it": false,
    "jest": false,
    "test": false
  }
}
